@model WebApplicationAPP.Models.Clientes

@{
    ViewBag.Title = "Cliente Persona";
}

<h2>Editar Cliente</h2>

<form asp-action="Edit" method="post">

<div class="mb-3">
    <label for="" class="form-label">Nombre</label>
    <input type="text"
           class="form-control"
           aria-describedby="helpId"
           placeholder="Ingrese su nombre"
           asp-for="Nombre" />
    <small id="helpId" class="form-text text-muted">Help Nombre</small>
</div>


<div class="mb-3">
    <label for="" class="form-label">Correo electronico</label>
    <input type="text"
           class="form-control"
           aria-describedby="helpId"
           placeholder="Ingrese su correo electronico"
           asp-for="Correo" />
    <small id="helpId" class="form-text text-muted">Help Correo</small>
</div>


<div class="mb-3">
    <label for="" class="form-label">Telefono</label>
    <input type="number"
           class="form-control"
           aria-describedby="helpId"
           placeholder="Ingrese su numero de telefono"
           asp-for="Telefono" />
    <small id="helpId" class="form-text text-muted">Help Telefono</small>
</div>

    <div class="mb-3">
        <label for="" class="form-label">Telefono</label>
        <input type="text"
               class="form-control"
               aria-describedby="helpId"
               placeholder="Ingrese su direccion"
               asp-for="Direccion" />
        <small id="helpId" class="form-text text-muted">Help Direccion</small>
    </div>

    <div class="mb-3">
        <label class="form-label">Fecha de registro</label>
        <input asp-for="FechaRegistro"
               type="date"
               class="form-control"
               value="@DateTime.Now.ToString("yyyy-MM-dd")"
               readonly />
    </div>

<div class="mb-3">
    <label for="" class="form-label">Estado</label>

    <div class="form-group">
        <input aria-describedby="helpId"
               placeholder="Ingrese su nombre"
               asp-for="Estado" />
    </div>

    <small id="helpId" class="form-text text-muted">Help Estado</small>
</div>

    <div class="mb-3">
        <a asp-action="Index"
           class="btn btn-danger"
           role="button">Cancelar</a>

        <button type="submit"
                class="btn btn-primary">
            Enviar
        </button>
    </div>

</form>
